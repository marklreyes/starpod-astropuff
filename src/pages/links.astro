---
import Layout from '../layouts/Layout.astro';
import SocialLink from '../components/SocialLink.astro';
import starpodConfig from 'starpod.config';

---

<Layout title="Links">
  <div class="relative z-10 px-8 lg:px-18">
    <h1
      class="mb-4 text-2xl font-bold text-light-text-heading lg:mb-6 lg:text-5xl dark:text-white"
    >
      All Our Links
    </h1>

    <div class="space-y-4">
      <!-- Resources Links -->
      <div class="rounded-lg bg-light-card p-6 dark:bg-dark-card">
        <h2 class="mb-3 text-xl font-bold text-light-text-heading dark:text-white">Free Resources</h2>
        <div class="space-y-3">
          <SocialLink
            href="/puff-finder"
            icon="finder"
            label="Explore my strain"
          />
          <SocialLink
            href="/puff-procurement"
            icon="procurement"
            label="Plan my first grow"
          />
          <SocialLink
            href="/should-i-puff"
            icon="puff"
            label="Should I puff?"
          />
          <SocialLink
            href="/cannabis-map"
			icon="map"
			label="Cannabis Map"
          />
        </div>
      </div>

	  <!-- Support Links -->
	  <div class="rounded-lg bg-light-card p-6 dark:bg-dark-card">
		<h2 class="mb-3 text-xl font-bold text-light-text-heading dark:text-white">Support Us</h2>
		<div class="space-y-3">
          <SocialLink
            href="https://puff-provisions.creator-spring.com/"
            icon="shopping-bag"
            label="Store"
          />
		  <SocialLink
			href="https://www.patreon.com/puffprovisions"
			icon="patreon"
			label="Patreon"
		  />
          <SocialLink
            href="/sponsor"
            icon="heart"
            label="Become a Sponsor"
          />
          <SocialLink
            href="/contact"
            icon="mail"
            label="Contact Us"
          />
		</div>
	  </div>

      <!-- Podcast Links -->
      <div class="rounded-lg bg-light-card p-6 dark:bg-dark-card">
        <h2 class="mb-3 text-xl font-bold text-light-text-heading dark:text-white">Listen Anywhere</h2>
        <div class="space-y-3">
          {starpodConfig.platforms.apple && (
            <SocialLink
              href={starpodConfig.platforms.apple}
              icon="apple-podcasts"
              label="Apple Podcasts"
            />
          )}
          {starpodConfig.platforms.spotify && (
            <SocialLink
              href={starpodConfig.platforms.spotify}
              icon="spotify"
              label="Spotify"
            />
          )}
          {starpodConfig.platforms.youtube && (
            <SocialLink
              href={starpodConfig.platforms.youtube}
              icon="youtube"
              label="YouTube"
            />
          )}
          {starpodConfig.platforms.pocketCasts && (
            <SocialLink
              href={starpodConfig.platforms.pocketCasts}
              icon="pocket-casts"
              label="Pocket Casts"
            />
          )}
          {starpodConfig.rssFeed && (
            <SocialLink
              href={starpodConfig.rssFeed}
              icon="rss"
              label="RSS Feed"
            />
          )}
        </div>
      </div>

	<!-- Social Links -->
      <div class="rounded-lg bg-light-card p-6 dark:bg-dark-card">
        <h2 class="mb-3 text-xl font-bold text-light-text-heading dark:text-white">Follow Us</h2>
        <div class="space-y-3">
			<SocialLink
				href="https://www.instagram.com/puffprovisions/"
				icon="instagram"
				label="Instagram"
			/>
			<SocialLink
				href="https://www.threads.com/@puffprovisions/"
				icon="threads"
				label="Threads"
			/>
			<SocialLink
				href="https://www.facebook.com/puffprovisions/"
				icon="facebook"
				label="Facebook"
			/>
			<SocialLink
				href="https://www.x.com/puffprovisions/"
				icon="twitter"
				label="X (Twitter)"
			/>
			<SocialLink
				href="https://www.tiktok.com/@puffprovisions/"
				icon="tiktok"
				label="TikTok"
			/>
        </div>
      </div>

    </div>
  </div>
</Layout>
